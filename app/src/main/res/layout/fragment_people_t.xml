<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_people_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="22dp"
        app:cardElevation="6dp">

        <ScrollView
            android:id="@+id/fragment_people_scroll"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fragment_people_image"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/fragment_people_title"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/color_news_people_t"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text="Поллианна 13.11 в 19:00"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteY="-2dp" />
                </android.support.design.widget.CoordinatorLayout>

                <TextView
                    android:id="@+id/fragment_people_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:gravity="right"
                    android:text="Дата публикации: \t 9.11.2017" />


                <TextView
                    android:id="@+id/fragment_people_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>


</android.support.design.widget.CoordinatorLayout>